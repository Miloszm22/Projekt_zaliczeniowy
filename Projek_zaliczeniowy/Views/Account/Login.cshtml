@{
    ViewData["Title"] = "Logowanie";
}

<h2 class="text-center">🔐 Logowanie</h2>

@if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"]))
{
    <div class="alert alert-info text-center">
        ℹ️ Musisz się zalogować, aby uzyskać dostęp do tej strony.
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger text-center">
        ❌ @Html.ValidationSummary(false)
    </div>
}

<form asp-action="Login" method="post" class="mt-4">
    <div class="form-group">
        <label>Email</label>
        <input name="email" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input name="password" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary w-100 mt-3">🔑 Zaloguj się</button>
</form>


