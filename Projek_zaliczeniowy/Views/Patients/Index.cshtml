@model List<MedicalAppointments.Data.Patient>


@{
    ViewData["Title"] = "Lista pacjentów";
}

<h2 class="my-4"><i class="fas fa-users"></i> Lista pacjentów</h2>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Dodaj pacjenta</a>
}

<table class="table table-striped shadow">
    <thead class="table-dark">
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Akcje</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.LastName</td>
                <td>@patient.Email</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Edytuj
                        </a>
                        <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Usuń
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>












