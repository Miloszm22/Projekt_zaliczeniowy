@model Projekt_zaliczeniowy.Models.HomeViewModel


@{
    ViewData["Title"] = "Strona Główna";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Witaj w systemie zarządzania wizytami</h1>
    <p class="lead">Zarządzaj lekarzami, pacjentami i wizytami w jednym miejscu.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-md"></i> Lekarze</h5>
                    <p class="card-text">Zarządzaj listą lekarzy w systemie.</p>
                    <a class="btn btn-primary" asp-controller="Doctors" asp-action="Index">Przejdź</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users"></i> Pacjenci</h5>
                    <p class="card-text">Przeglądaj i edytuj dane pacjentów.</p>
                    <a class="btn btn-primary" asp-controller="Patients" asp-action="Index">Przejdź</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Wizyty</h5>
                    <p class="card-text">Zarządzaj harmonogramem wizyt.</p>
                    <a class="btn btn-primary" asp-controller="Appointments" asp-action="Index">Przejdź</a>
                </div>
            </div>
        </div>
    </div>
</div>




